<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <VideoView
        android:id="@+id/vv_activity_preview_multi_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:id="@+id/rl_activity_preview_multi_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_activity_preview_multi_media"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            style="@style/loading"/>
        <TextView
            android:id="@+id/tv_activity_preview_multi_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:layout_below="@id/pb_activity_preview_multi_media"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>