<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_chart_medical_insurance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/chart_time_selector"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <include layout="@layout/chart_title"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/own_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    <include layout="@layout/chart_below"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        >
        <View
            android:id="@+id/vertical_line2"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="#00b7ee"
            />
        <TextView
            android:id="@+id/chartName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/vertical_line2"
            android:layout_centerVertical="true"
            android:text="医保分类"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_below="@id/vertical_line2"
            android:layout_marginTop="13dp"
            />
    </RelativeLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/medical_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
