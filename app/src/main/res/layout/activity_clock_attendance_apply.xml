<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 导航标题栏 -->
    <com.lefuorgn.widget.PagerSlidingTabStrip
        android:id="@+id/psts_activity_clock_attendance_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sliding_tab_strip_background"
        lefu:allowWidthFull="true" >
    </com.lefuorgn.widget.PagerSlidingTabStrip>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_page_sub_title_height"
        android:drawableLeft="@drawable/home_title_label"
        android:background="@color/white"
        android:paddingLeft="@dimen/home_page_margin_left"
        android:paddingRight="@dimen/home_page_margin_right"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="申请详情"
        android:textSize="@dimen/home_page_text_size_mid"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_clock_attendance_apply"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>
</LinearLayout>