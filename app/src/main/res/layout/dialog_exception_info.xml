<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_dialog_exception_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@mipmap/dialog_fragment_base_warning"
        android:drawablePadding="10dp"
        android:background="@drawable/dialog_fragment_fragment_top"
        android:text="提示"
        android:textSize="18sp"
        android:textColor="#333333"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/tv_dialog_exception_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="#333333"
            android:hint="未测量说明"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dialog_exception_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/dialog_fragment_fragment_bottom"
        >

        <TextView
            android:id="@+id/btn_dialog_exception_info_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>

        <TextView
            android:id="@+id/btn_dialog_exception_info_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>

    </LinearLayout>

</LinearLayout>