<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:background="@drawable/item_touch_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_activity_allocating_task_progress_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        android:maxLines="1"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/pb_item_activity_allocating_task_progress"
        style="@style/ProgressBar"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:max="100"
        android:progress="50"
        />

    <TextView
        android:id="@+id/tv_item_activity_allocating_task_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:gravity="center" />

</LinearLayout>