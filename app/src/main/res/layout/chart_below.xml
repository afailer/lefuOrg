<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        >
	        <TextView 
		        android:id="@+id/cb_t1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:textColor="#646d75"
		        android:textSize="13sp"
	        />
	        <TextView 
		        android:id="@+id/cb_t1_val"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/cb_t1"
		        android:textColor="@color/colorPrimary"
		        android:textSize="18sp"
	        />
	    </RelativeLayout>
	    <View 
	        android:layout_width="1dp"
	        android:layout_height="28dp"
	        android:layout_gravity="center_vertical"
	        android:background="#d0d0d0"
	        />
	     <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        >
	        <TextView 
		        android:id="@+id/cb_t2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:textColor="#646d75"
		        android:textSize="13sp"
	        />
	        <TextView 
		        android:id="@+id/cb_t2_val"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/cb_t2"
		        android:textColor="#6dde64"
		        android:textSize="18sp"
	        />
	    </RelativeLayout>
	    <View 
	        android:layout_width="1dp"
	        android:layout_height="28dp"
	        android:layout_gravity="center_vertical"
	        android:background="#d0d0d0"
	        />
	     <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        >
	        <TextView 
		        android:id="@+id/cb_t3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:textColor="#646d75"
		        android:textSize="13sp"
	        />
	        <TextView 
		        android:id="@+id/cb_t3_val"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/cb_t3"
		        android:textColor="#4d5967"
		        android:textSize="18sp"
	        />
	    </RelativeLayout>
	</LinearLayout>

</LinearLayout>
