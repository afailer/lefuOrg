<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_item_fragment_contact_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:textColor="#454545"
        />
<RelativeLayout
    android:id="@+id/stuff_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_touch_background"
    >
    <ImageView
        android:id="@+id/stuff_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/gov_normal"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stuff_select"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/stuff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_big"
            />
        <TextView
            android:id="@+id/dept_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stuff_name"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/gray"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/pos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stuff_name"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/gray"
            android:layout_toRightOf="@id/dept_name"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/open_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/more_gray"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>
</LinearLayout>