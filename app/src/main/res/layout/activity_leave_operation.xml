<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        style="@style/LeaveActivity_item">
        <TextView
            style="@style/LeaveActivity_item_name"
            android:text="老人"
            />
        <TextView
            android:id="@+id/tv_activity_leave_operation_name"
            style="@style/LeaveActivity_item_content"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        style="@style/LeaveActivity_item">
        <TextView
            style="@style/LeaveActivity_item_name"
            android:text="实际离院时间"
            />

        <TextView
            android:id="@+id/tv_activity_leave_operation_rl_time"
            style="@style/LeaveActivity_item_content"
            android:drawableRight="@mipmap/tree_ex"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        style="@style/LeaveActivity_item">
        <TextView
            style="@style/LeaveActivity_item_name"
            android:text="预计返回时间"
            />
        <TextView
            android:id="@+id/tv_activity_leave_operation_eb_time"
            style="@style/LeaveActivity_item_content"
            android:drawableRight="@mipmap/tree_ex"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        style="@style/LeaveActivity_item">
        <TextView
            style="@style/LeaveActivity_item_name"
            android:text="本人或家属签名"
            />
        <EditText
            android:id="@+id/et_activity_leave_operation_signature"
            style="@style/LeaveActivity_item_content"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        style="@style/LeaveActivity_item">
        <TextView
            style="@style/LeaveActivity_item_name"
            android:text="请假事由"
            />
        <EditText
            android:id="@+id/et_activity_leave_operation_reason"
            style="@style/LeaveActivity_item_content"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <EditText
        android:id="@+id/et_activity_leave_operation_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background_shape"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:hint="注意事项"
        android:gravity="center"
        android:lines="7"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_activity_leave_operation_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_radius_selector"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="销假"
            android:textColor="@drawable/btn_text_color_selector"
            />
        <TextView
            android:id="@+id/tv_activity_leave_operation_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="修改"
            android:textColor="@drawable/btn_text_color_selector"
            />

    </LinearLayout>

</LinearLayout>