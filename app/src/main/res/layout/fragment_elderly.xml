<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lefu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/colorPrimary">

        <!-- 导航标题栏 -->
        <com.lefuorgn.widget.PagerSlidingTabStrip
            android:id="@+id/psts_fragment_elderly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/elderly_sliding_tab_strip_background"
            android:layout_centerInParent="true"
            lefu:allowWidthFull="true"
            lefu:slidingBlock="@drawable/elderly_image_sliding_block" >
        </com.lefuorgn.widget.PagerSlidingTabStrip>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_elderly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>