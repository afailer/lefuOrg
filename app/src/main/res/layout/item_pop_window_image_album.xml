<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_touch_background"
    android:padding="6dp" >

    <ImageView
        android:id="@+id/iv_item_pop_window_image_album_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/multi_media_image_folder_default"
        android:layout_marginLeft="6dp"
        android:contentDescription="@string/img_describe"/>

    <TextView
        android:id="@+id/tv_item_pop_window_image_album_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_pop_window_image_album_img"
        android:paddingLeft="10dp"
        android:textColor="#444"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_item_pop_window_image_album_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:src="@mipmap/multi_media_image_folder_choose"
        android:visibility="gone"
        android:contentDescription="@string/img_describe"/>

</RelativeLayout>