<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_fragment_fragment_top"
        android:padding="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_sign_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#333333"
            />

        <ImageView
            android:id="@+id/iv_dialog_sign_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@mipmap/close_blue"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_dialog_sign_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:orientation="horizontal"
                android:padding="13dp"
                android:background="#FFFFFF"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_dialog_sign_info_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    />
                <EditText
                    android:id="@+id/et_dialog_sign_info"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_sign_info_dialog"
                    android:layout_height="30dp"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:maxLength="7"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_dialog_sign_info_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:textSize="18sp"
                    android:textColor="@color/light_grey"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/dialog_fragment_fragment_bottom"
                >

                <TextView
                    android:id="@+id/btn_dialog_sign_info_device"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_background_radius_selector"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="6dp"
                    android:text="设备采集"
                    android:textColor="@drawable/btn_text_color_selector"/>

                <TextView
                    android:id="@+id/btn_dialog_sign_info_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_background_radius_selector"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="6dp"
                    android:text="录入"
                    android:textColor="@drawable/btn_text_color_selector"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_sign_info_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dialog_sign_info_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="80dp"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/dialog_fragment_fragment_bottom"
                >

                <TextView
                    android:id="@+id/tv_dialog_sign_info_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_background_radius_selector"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="6dp"
                    android:text="确定"
                    android:textColor="@drawable/btn_text_color_selector"/>

                <TextView
                    android:id="@+id/tv_dialog_sign_info_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_background_radius_selector"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="6dp"
                    android:text="取消"
                    android:textColor="@drawable/btn_text_color_selector"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>