<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_activity_birthday_reminder_details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="姓名"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/recycler_view_item_division_color"
        />
    <TextView
        android:id="@+id/tv_item_activity_birthday_reminder_details_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="出生日期"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/recycler_view_item_division_color"
        />
    <TextView
        android:id="@+id/tv_item_activity_birthday_reminder_details_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="生日类型"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/recycler_view_item_division_color"
        />
    <TextView
        android:id="@+id/tv_item_activity_birthday_reminder_details_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="床位号"
        />

</LinearLayout>