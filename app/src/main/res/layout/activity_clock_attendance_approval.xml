<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_clock_attendance_approval"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_activity_clock_attendance_approval_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_main_color_selector"/>
        <TextView
            android:id="@+id/btn_activity_clock_attendance_approval_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交"
            android:textSize="@dimen/text_size_big"
            android:textColor="@drawable/btn_text_color_selector"
            android:background="@drawable/btn_background_selector"/>
    </LinearLayout>
</LinearLayout>