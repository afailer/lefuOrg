<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/item_touch_background">
    <ImageView
        android:id="@+id/iv_item_fragment_my_attendance_apply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/img_describe"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_fragment_my_attendance_apply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/tv_item_fragment_my_attendance_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_item_fragment_my_attendance_apply"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_margin="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"/>
</LinearLayout>