<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_fragment_allocating_task_nursing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#323331"
        android:text="张三" />

    <TextView
        android:id="@+id/tv_item_fragment_allocating_task_nursing_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:gravity="right"
        android:maxLength="4"
        android:ellipsize="end"
        android:textColor="#666666"/>

    <com.lefuorgn.widget.CounterView
        android:id="@+id/cv_item_fragment_allocating_task_nursing"
        android:layout_width="100dp"
        android:layout_height="32dp"
        app:minValue="1"
        app:defaultValue="0"
        app:addButtonBackground="@drawable/counter_view_selector"
        app:reduceButtonBackground="@drawable/counter_view_selector"
        app:textSize="14sp"
        app:borderColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_item_fragment_allocating_task_nursing_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/delete"
        android:drawablePadding="14dp"
        android:layout_marginLeft="6dp"
        android:text="次"
        android:textColor="#666666"/>

</LinearLayout>