<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/logbook_title_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="#454545" />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/item_touch_background">

        <TextView
            android:id="@+id/tv_item_activity_logbook_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_item_activity_logbook_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_activity_logbook_info_name"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_item_activity_logbook_info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_item_activity_logbook_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_activity_logbook_info_name"
            android:textColor="#333333"
            android:textSize="14sp"
            />

    </RelativeLayout>
</LinearLayout>