<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
    >
    <RelativeLayout 
        android:id="@+id/all_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="#F9F9F9"
        >
        <ImageView 
            android:id="@+id/all_data_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/count_old"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:id="@+id/all_data_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/all_data_type_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:text="老人"
            android:textSize="@dimen/text_size_small"
            android:textColor="#757575"
            />
        
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_touch_background"
     >
    <TextView 
        android:id="@+id/gov_all_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_normal"
        android:layout_margin="6dp"
        />
	<TextView 
	    android:id="@+id/gov_all_item_value"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="6dp"
	    android:textColor="@color/text_color_normal"
	    android:textSize="@dimen/text_size_big"
	    android:layout_alignParentBottom="true"
	    />
	<ImageView 
	    android:id="@+id/gov_all_item_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="6dp"
	    android:layout_alignParentRight="true"
	    />
	<TextView 
	    android:id="@+id/gov_all_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/text_size_small"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:textColor="@color/text_color_normal"
	    />
</RelativeLayout>
</LinearLayout>
