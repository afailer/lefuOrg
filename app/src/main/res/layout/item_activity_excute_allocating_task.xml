<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_activity_execute_allocating_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:textColor="#323331"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_activity_execute_allocating_task_time"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:background="@drawable/today_work_background_selector"
        android:layout_marginLeft="110dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@drawable/today_work_text_selector"/>

    <TextView
        android:id="@+id/tv_item_activity_execute_allocating_task_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawableRight="@mipmap/tree_ex"
        android:drawablePadding="16dp" />

</RelativeLayout>