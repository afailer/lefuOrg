<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <ImageView 
        android:id="@+id/img_info_window_map_fragment"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:src="@mipmap/img_head_default"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    
    <LinearLayout 
        android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
		android:layout_gravity="center_vertical"
		android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/name_info_window_map_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市三乐养老公寓"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/address_info_window_map_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：金融街道青云西路121号"
            android:textColor="#79878E"
            android:textSize="12sp"
            />
        
        
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/right_info_window_map_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gov_title_right"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        />
    
</LinearLayout>
