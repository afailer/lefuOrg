<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:background="@drawable/item_touch_background">
    <TextView
        android:id="@+id/tv_item_activity_alarm_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/sos_alarm"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@drawable/out_bed_alarm_text_selector"/>
    <TextView
        android:id="@+id/tv_item_activity_alarm_info_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/alarm_info_point"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_item_activity_alarm_info_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/gray"/>
</LinearLayout>