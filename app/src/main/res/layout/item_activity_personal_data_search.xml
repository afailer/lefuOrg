<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_touch_background">

    <TextView
        android:id="@+id/tv_item_activity_personal_data_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_item_activity_personal_room_bed_no_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item_activity_personal_data_search"
        android:textSize="14sp"
        />
</RelativeLayout>