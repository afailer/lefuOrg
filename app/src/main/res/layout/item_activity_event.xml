<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_touch_background"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_item_activity_event"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@mipmap/img_default"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_item_activity_event_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_activity_event"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_activity_event_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_activity_event_theme"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_item_activity_event"
        android:maxLines="2"
        android:textColor="#9FAFB6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_activity_event_org_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_activity_event"
        android:text="北京福乐连连养老院"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_item_activity_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-05-08"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>