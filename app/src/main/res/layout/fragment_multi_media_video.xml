<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lefuorgn.lefu.multiMedia.widget.VideoView
        android:id="@+id/vv_fragment_multi_media_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pb_fragment_multi_media_video"
            style="@style/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            />

        <TextView
            android:id="@+id/btn_fragment_multi_media_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="开始录制"
            android:textColor="@drawable/btn_text_color_selector"/>

    </LinearLayout>

</LinearLayout>