<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_item_fragment_select_elderly_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="#454545" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/cb_item_fragment_select_elderly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:button="@drawable/check_box_selector"
            android:paddingLeft="20dp"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_item_fragment_select_elderly_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/cb_item_fragment_select_elderly"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/cb_item_fragment_select_elderly"
            android:layout_below="@id/tv_item_fragment_select_elderly_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_fragment_select_elderly_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#9FAFB6" />

            <TextView
                android:id="@+id/tv_item_fragment_select_elderly_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#9FAFB6" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>