<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_dialog_nursing_multi_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/picture_default"
        android:contentDescription="@string/img_describe"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/iv_dialog_nursing_multi_media_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:src="@mipmap/pic_remove"
        android:background="@null"
        android:contentDescription="@string/img_describe"
        />

</RelativeLayout>