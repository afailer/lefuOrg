<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/tv_dialog_date_picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/dialog_fragment_fragment_top"
        android:textSize="18sp"
        android:textColor="#333333" />
    <DatePicker
        android:id="@+id/dp_dialog_date_picker"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnersShown="true"
        android:background="@color/white"/>
    <TimePicker
        android:id="@+id/tp_dialog_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <LinearLayout
        android:id="@+id/ll_dialog_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/dialog_fragment_fragment_bottom">
        <TextView
            android:id="@+id/btn_dialog_date_picker_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>
        <TextView
            android:id="@+id/btn_dialog_date_picker_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>
    </LinearLayout>
</LinearLayout>