<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="@dimen/nursing_info_editing_width"
    android:layout_height="@dimen/base_grid_height">

    <TextView
        android:id="@+id/tv_item_item_activity_nursing_info_batch_editing_name"
        android:layout_width="55dp"
        android:layout_height="@dimen/base_grid_height"
        android:gravity="center"
        android:textColor="#9FAFB6"
        android:maxLines="2"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/tv_item_item_activity_nursing_info_batch_editing_operation"
        android:layout_width="85dp"
        android:layout_height="@dimen/base_grid_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_item_item_activity_nursing_info_batch_editing_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_nursing_editing_increase_selector"
            android:padding="6dp"
            android:gravity="center"
            android:text="一" />

        <TextView
            android:id="@+id/tv_item_item_activity_nursing_info_batch_editing_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="6dp"
            android:background="@drawable/btn_nursing_editing_increase_selector"
            android:gravity="center"
            android:text="＋" />

    </LinearLayout>

</LinearLayout>