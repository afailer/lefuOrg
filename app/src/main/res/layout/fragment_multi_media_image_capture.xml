<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.lefuorgn.lefu.multiMedia.widget.PhotographView
            android:id="@+id/pv_fragment_multi_media_image_capture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_fragment_multi_media_image_capture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/focus_focusing"
            android:layout_centerInParent="true"
            android:contentDescription="@string/img_describe"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_fragment_multi_media_image_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="拍照"
            android:textColor="@drawable/btn_text_color_selector"/>

    </LinearLayout>

</LinearLayout>