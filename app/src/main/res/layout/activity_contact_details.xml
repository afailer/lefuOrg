<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_contact_details_activity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/img_default"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/name_contact_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/sex_contact_details_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#999999"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F0F0F6"
        />

    <RelativeLayout
        android:id="@+id/call_phone_contact_details_activity"
        style="@style/ContactDetailsActivity_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号码"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/phone_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_selector"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F6"
        />
    <RelativeLayout
        android:id="@+id/call_tel_contact_details_activity"
        style="@style/ContactDetailsActivity_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="固定电话"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tel_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/img_call_tel_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_selector"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F6"
        />
    <RelativeLayout
        style="@style/ContactDetailsActivity_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="电子邮件"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/mail_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_selector"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:visibility="invisible"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F6"
        />
    <RelativeLayout
        style="@style/ContactDetailsActivity_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="部门"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/departments_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_selector"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:visibility="invisible"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F6"
        />
    <RelativeLayout
        style="@style/ContactDetailsActivity_item"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="职位"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/job_contact_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_selector"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F6"
        />

</LinearLayout>