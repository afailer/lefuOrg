<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
		android:background="@color/colorPrimaryGov"
        >
        
        <TextView
            android:id="@+id/tv_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="公告通知"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        
        <TextView 
            android:id="@+id/unread_messages_gov_circular_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未读消息"
            android:textSize="14sp"
            android:textColor="#506060"
            />
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#E5E5E5"
            />
        
        <TextView 
            android:id="@+id/all_messages_gov_circular_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部消息"
            android:textSize="14sp"
            android:textColor="#4AAEF6"
            />
        
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ABABAB"
        />
    
    
    <FrameLayout
        android:id="@+id/real_content_gov_circular_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        

</LinearLayout>