<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/item_touch_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_fragment_estimate_details_score"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_item_fragment_estimate_details_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_item_fragment_estimate_details_date"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:drawableRight="@mipmap/arrow_red"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        />
</LinearLayout>