<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="#303030" >

        <ImageView
            android:id="@+id/iv_fragment_multi_media_image_album_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/toolbar_back"
            android:paddingLeft="@dimen/tool_bar_margin_padding_left_right"
            android:paddingRight="@dimen/tool_bar_margin_padding_left_right"
            android:contentDescription="@string/img_describe" />

        <TextView
            android:id="@+id/tv_fragment_multi_media_image_album_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginRight="@dimen/tool_bar_margin_padding_left_right"
            android:background="@drawable/btn_background_selector"
            android:text="完成"
            android:textColor="@drawable/btn_text_color_selector"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_multi_media_image_album"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_fragment_multi_media_image_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="#303030" >

        <TextView
            android:id="@+id/tv_fragment_multi_media_image_album_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/tool_bar_margin_padding_left_right"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_fragment_multi_media_image_album_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/tool_bar_margin_padding_left_right"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>