<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_gov_organization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/seek_gov_org_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_touch_background"
        android:layout_margin="10dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查找养老机构"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/gov_seek"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textColor="#888888"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E7F0"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gov_chose_org_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F9F9F9"
        >

        <TextView
            android:id="@+id/submit_gov_org_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#98D3FB"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:text="确定"
            android:textSize="13sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</LinearLayout>
