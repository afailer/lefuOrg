<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="老人"
            />
        <TextView
            android:id="@+id/tv_activity_logbook_info_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        android:id="@+id/ll_activity_logbook_info_details_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="类别"
            />
        <TextView
            android:id="@+id/tv_activity_logbook_info_details_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/tree_ex"
            android:drawablePadding="10dp"
            android:gravity="right"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <LinearLayout
        android:id="@+id/ll_activity_logbook_info_details_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="记录人"
            />
        <TextView
            android:id="@+id/tv_activity_logbook_info_details_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_activity_logbook_info_details"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_view_item_division_color"
        />

    <TextView
        android:id="@+id/tv_activity_logbook_info_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:text="备注"
        android:textSize="18sp"
        android:textColor="#333333"
        />

    <EditText
        android:id="@+id/et_activity_logbook_info_details"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:gravity="top|left"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/colorPrimary"
        android:scrollbars="vertical"
        android:background="@drawable/edit_text_background_shape"
        />
    <TextView
        android:id="@+id/tv_logbook_details"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:gravity="top|left"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:scrollbars="vertical"
        android:visibility="gone"
        android:background="@drawable/edit_text_background_shape"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_activity_logbook_info_details_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="13dp"
            android:background="@drawable/btn_background_selector"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@drawable/btn_text_color_selector"
            />

    </LinearLayout>

</LinearLayout>