<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/base_grid_height">

    <CheckedTextView
        android:id="@+id/ctv_item_activity_nursing_info_batch_editing"
        android:layout_width="@dimen/base_grid_width"
        android:layout_height="@dimen/base_grid_height"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textSize="17sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/recycler_view_item_division_color"/>

    <com.lefuorgn.widget.MyHScrollView
        android:id="@+id/hsv_item_activity_nursing_info_batch_editing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_grid_height"
        android:scrollbars="none"
        android:overScrollMode="never" >

        <LinearLayout
            android:id="@+id/ll_item_activity_nursing_info_batch_editing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:orientation="horizontal" >
        </LinearLayout>

    </com.lefuorgn.widget.MyHScrollView>

</LinearLayout>