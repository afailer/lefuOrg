<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/chartLastMonthData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_normal"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/chart_arrow_left"
        android:text="上月"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/chartNextMonthData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="下月"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/chart_arrow_right"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/chart_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_grey"
        android:layout_below="@id/chartLastMonthData"
        ></View>
</RelativeLayout>
