<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_dialog_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@mipmap/dialog_fragment_base_warning"
        android:drawablePadding="10dp"
        android:background="@drawable/dialog_fragment_fragment_top"
        android:text="提示"
        android:textSize="18sp"
        android:textColor="#333333"
        />
    <LinearLayout
        android:id="@+id/dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dialog_alert_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#333333"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dialog_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/dialog_fragment_fragment_bottom"
        >

        <TextView
            android:id="@+id/btn_dialog_alert_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>

        <TextView
            android:id="@+id/btn_dialog_alert_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background_radius_selector"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:textColor="@drawable/btn_text_color_selector"/>

    </LinearLayout>

</LinearLayout>