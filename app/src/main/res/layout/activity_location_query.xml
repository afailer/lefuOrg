<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lefuorgn.widget.ClearEditText
        android:id="@+id/cet_activity_location_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/clear_edit_text_background_shape"
        android:drawableLeft="@mipmap/search_icon"
        android:layout_margin="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="请输入关键字"
        android:textSize="15sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
                <LinearLayout
                    android:id="@+id/ll_activity_location_query_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">
                        <TextView
                            android:id="@+id/tv_activity_location_query_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_activity_location_query_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_activity_location_query_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gray"/>
                </LinearLayout>
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/map_activity_location_query"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/ll_activity_location_query_details"
                    android:clickable="true" >
                </com.baidu.mapapi.map.MapView>
                <LinearLayout
                    android:id="@+id/ll_activity_location_query_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/ll_activity_location_query_details"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:visibility="invisible">
                    <ImageView
                        android:id="@+id/btn_activity_location_query_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/alarm_phone"
                        android:contentDescription="@string/img_describe"/>
                    <ImageView
                        android:id="@+id/btn_activity_location_query_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/alarm_refresh"
                        android:contentDescription="@string/img_describe"/>
                    <ImageView
                        android:id="@+id/btn_activity_location_query_navigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/alarm_navigation"
                        android:contentDescription="@string/img_describe"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/pb_activity_location_query"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/ll_activity_location_query_details"
                    android:layout_margin="11dp"
                    style="@style/loading_alarm"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/recycler_view_item_division_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_activity_location_query_electronic_fence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/electronic_fence_selector"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="电子围栏"
                    android:textColor="@drawable/home_text_color_selector"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/btn_activity_location_query_trajectory_playback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trajectory_playback_selector"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="轨迹回放"
                    android:textColor="@drawable/home_text_color_selector"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_popup_window_activity_location_query"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_popup_window_activity_location_query"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white">
            </android.support.v7.widget.RecyclerView>
            <View
                android:id="@+id/v_popup_window_activity_location_query"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/translucent"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>