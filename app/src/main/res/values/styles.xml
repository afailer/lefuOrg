<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 启动页面,消除黑屏情况 -->
    <style name="AppStartLoadTranslucent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--照片选择器弹出相册-->
    <style name="anim_image_folder_style">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>

    <!-- 首页实时数据图片风格 -->
    <style name="HomePageFragmentRealTimeData_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:contentDescription">@string/img_describe</item>
    </style>
    <!-- 首页实时数据描述风格 -->
    <style name="HomePageFragmentRealTimeData_TextView_Describe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 首页实时数据内容风格 -->
    <style name="HomePageFragmentRealTimeData_TextView_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#01AEEF</item>
        <item name="android:textSize">21sp</item>
    </style>
    <!-- 首页信息条目风格 -->
    <style name="HomePageFragmentIndex_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/home_text_color_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 网格数据展示页面中查询条件中条目风格 -->
    <style name="GridMenuRightFragment_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:background">@drawable/item_touch_background</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 网格数据展示页面中查询条件中条目名称风格 -->
    <style name="GridMenuRightFragment_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#323331</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 网格数据展示页面中查询条件中条目内容风格 -->
    <style name="GridMenuRightFragment_Content" parent="GridMenuRightFragment_Title">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@mipmap/more_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <!-- ViewPage文本  滑动标签标题 -->
    <style name="ViewPage_SlidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/viewpager_tab_item_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- dialog的主题 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="btnstyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>
    <!-- viewPage文本  滑动标签标题 -->
    <style name="viewPage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/viewpage_selector_slide_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 通讯录员工详情页面条目风格 -->
    <style name="ContactDetailsActivity_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/item_touch_background</item>
    </style>

    <!-- 老人外出详情页面条目风格 -->
    <style name="LeaveActivity_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 老人外出详情页面条目名称风格 -->
    <style name="LeaveActivity_item_name">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- 老人外出详情页面条目内容风格 -->
    <style name="LeaveActivity_item_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 加载滚动条样式(页面中的) -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- 加载滚动条样式(页面上层的) -->
    <style name="loading_white">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_white</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- 告警信息加载滚动条样式 -->
    <style name="loading_alarm">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_alarm</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- 将activity转换成dialog的主题 -->
    <style name="ActivityDialog" parent="@android:style/Theme.Dialog">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="btnstyle_gray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_selector_gray</item>
    </style>

    <!-- 设置页面条目风格 -->
    <style name="SettingFragment_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_touch_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_bar_shape</item>
    </style>

</resources>
